   namespace georss="http://www.georss.org/georss" 
   namespace gml="http://www.opengis.net/gml"

   

   georssWhere = 
   	element georss:where {
   		gmlElement
   	}   	
   	
   gmlElement =
      gmlPointElement | gmlLineStringElement | gmlPolygonElement | gmlEnvelopeElement
      
   gmlPointElement = 
      element gml:Point { 
      	      element gml:*  {
      	      	      text
      	      }
      }
   
   gmlLineStringElement = 
      element gml:LineString { 
      	      element gml:*  {
      	      	      text
      	      }
      }
       
   gmlPolygonElement = 
      element gml:Polygon { 
      	      element gml:*  {
      	      	      text
      	      }
      }
   gmlEnvelopeElement = 
      element  gml:Envelope { 
      	      element gml:*  {
      	      	      text
      	      }
      }      
