<grammar xmlns:georss="http://www.georss.org/georss" xmlns:gml="http://www.opengis.net/gml" xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <define name="georssWhere">
    <element name="georss:where">
      <ref name="gmlElement"/>
    </element>
  </define>
  <define name="gmlElement">
    <choice>
      <ref name="gmlPointElement"/>
      <ref name="gmlLineStringElement"/>
      <ref name="gmlPolygonElement"/>
      <ref name="gmlEnvelopeElement"/>
    </choice>
  </define>
  <define name="gmlPointElement">
    <element name="gml:Point">
      <element name="gml:pos">
        <list>
          <data type="decimal"/>
          <data type="decimal"/>
        </list>
      </element>
    </element>
  </define>
  <define name="gmlLineStringElement">
    <element name="gml:LineString">
      <element name="gml:posList">
        <list>
          <oneOrMore>
            <data type="decimal"/>
            <data type="decimal"/>
          </oneOrMore>
        </list>
      </element>
    </element>
  </define>
  <define name="gmlPolygonElement">
    <element name="gml:Polygon">
      <element name="gml:exterior">
        <element name="gml:LinearRing">
          <element name="gml:posList">
            <list>
              <oneOrMore>
                <data type="decimal"/>
                <data type="decimal"/>
              </oneOrMore>
            </list>
          </element>
        </element>
      </element>
    </element>
  </define>
  <define name="gmlEnvelopeElement">
    <element name="gml:Envelope">
      <interleave>
        <element name="gml:lowerCorner">
          <list>
            <data type="decimal"/>
            <data type="decimal"/>
          </list>
        </element>
        <element name="gml:upperCorner">
          <list>
            <data type="decimal"/>
            <data type="decimal"/>
          </list>
        </element>
      </interleave>
    </element>
  </define>
</grammar>
